<?xml version="1.0" encoding="utf-8"?>
<whb.cn.com.customeview.customerview.CustomerViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"

    tools:context="whb.cn.com.customeview.MainActivity">

    <whb.cn.com.customeview.customerview.PieView
        android:id="@+id/customer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#000"
        app:titleText="qwqw"
        app:titleTextColor="#fff"
        app:titleTextSize="20dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#000"
        android:visibility="gone"
        android:src="@mipmap/ic_launcher" />
</whb.cn.com.customeview.customerview.CustomerViewGroup>
